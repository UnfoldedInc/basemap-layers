{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "deckgl-style-spec",
  "type": "object",
  "additionalProperties": false,
  "title": "deck.gl Style Specification",
  "required": [
    "layers",
    "sources",
    "version"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "enum": [1]
    },
    "id": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "name": {
      "type": "string",
      "description": "Name of style"
    },
    "sources": {
      "type": "object"
    },
    "sprite": {
      "type": "string"
    },
    "glyphs": {
      "type": "string"
    },
    "layers": {
      "type": "array",
      "items": {
        "$ref": "layer.json#/definitions/Layer"
      }
    }
  }
}
