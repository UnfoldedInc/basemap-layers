{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "source.json",
  "definitions": {
    "Source": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["vector"]
        },
        "attribution": {
          "type": "string",
          "description": "Contains an attribution to be displayed when the map is shown to a user."
        },
        "bounds": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": -180,
            "maximum": 180,
            "minItems": 4,
            "maxItems": 4
          }
        },
        "maxzoom": {
          "type": "number",
          "minimum": 0,
          "default": 22
        },
        "minzoom": {
          "type": "number",
          "minimum": 0,
          "default": 0
        },
        "scheme": {
          "type": "string",
          "enum": ["xyz", "tms"],
          "default": "xyz"
        },
        "tiles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "url": {
          "type": "string"
        }
      }
    }
  }
}
