{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "layer.json",
  "definitions": {
    "Layer": {
      "type": "object",
      "allOf": [
        {"$ref": "#/definitions/LayerCommon"},
        {
          "properties": {
            "type": {
              "type": "string",
              "enum": ["TextLayer"]
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "TextLayer"
              }
            }
          },
          "then": {
            "$ref": "textLayer.json#/definitions/TextLayer"
          }
        }
      ]
    },
    "LayerCommon": {
      "required": [
        "id",
        "source",
        "source-layer"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "filter": {
          "type": "array",
          "description": "Filter array conforming to Mapbox Style Spec."
        },
        "source": {
          "type": "string"
        },
        "source-layer": {
          "type": "string"
        }
      }
    }
  }
}
