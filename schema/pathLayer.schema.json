{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "pathLayer.json",
  "definitions": {
    "PathLayer": {
      "type": "object",
      "properties": {
        "color": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0,
            "maximum": 255,
            "minItems": 3,
            "maxItems": 4
          }
        },
        "width": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "description": "The width of each path, in units specified by widthUnits (default meters)."
        }
      }
    }
  }
}
